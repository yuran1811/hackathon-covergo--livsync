{
  "name": "livsync",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "description": "",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prepare": "husky",
    "bump": "bumpp",
    "nxs": "nx show project",
    "bundle": "nx run-many -t bundle",
    "build": "nx run-many -t build -p @livsync/api @livsync/web",
    "start": "nx run-many -t start -p @livsync/api @livsync/web",
    "serve": "nx run-many -t serve -p @livsync/api @livsync/web",
    "typecheck": "nx run-many -t typecheck",
    "test": "nx run-many -t test",
    "test:e2e": "nx run-many -t test:e2e",
    "lint": "nx run-many -t lint --cache",
    "lint:fix": "nx run-many -t lint --cache --fix",
    "lint:inspect": "eslint --inspect-config",
    "prisma-gen": "nx run-many -t prisma:generate",
    "format": "prettier --write .",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "api": "pnpm --filter @livsync/api",
    "web": "pnpm --filter @livsync/web",
    "common": "pnpm --filter @livsync/pkg-common"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@eslint-react/eslint-plugin": "catalog:",
    "@eslint/js": "catalog:",
    "@nx/eslint": "catalog:",
    "@nx/vite": "catalog:",
    "@prettier/plugin-xml": "catalog:",
    "bumpp": "catalog:",
    "cz-git": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-format": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-refresh": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "nx": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "resolutions": {
    "cookie": "0.7.2"
  },
  "lint-staged": {
    "**/*": [
      "eslint --cache --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "volta": {
    "node": "22.17.0"
  },
  "dependencies": {
    "typescript-eslint": "8.46.2"
  }
}
